extends ./includes/layout
block main
    h3.center BlogTitle
    .row
        article.all-blogs.col.s12.m12
            section.card.col.m6.s12.hoverable
                .card-image
                    img.responsive-img(src='blog-logo.jpg')
                .card-content
                    h4.flow-text
                        | Author:
                        span blog.author
                    p
                        | I am a very simple card. I am good at containing small bits of information.
                        | I am convenient because I require little markup to use effectively.
                .card-action
                    button.btn.blue.back Back
                    button.btn.red.delete.right Delete
